{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["./node_modules/@types/*", "*"]
    },
    "types": ["reflect-metadata", "node"],
    "declaration": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/**/*.tsx",
    "src/**/*.json"
  ]
}
